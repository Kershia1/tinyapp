<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>

     <!-- Place if statement here ? if not logged in yet, before rendering header? -->

     <div class ="d-flex justify content-center">
     <% if (user) { %>
      Logged in as: <%= user.email %>
      <form class="form-inline" action="/logout" method="POST">
        <div class="form-group mb-2">
          <button type="submit" class="btn btn-primary">Logout</button>
          </div>
        </form>

    <a class="nav-item nav-link" href="/urls_login">Login Page</a>
    <a class="nav-item nav-link" href="/register">Registration Page</a>

     <% } else { %>
      <p class="navbar-text">Already Registered? Please login here.</p>
      <a class="nav-item nav-link" href="/urls_login">Login Page</a>
    <% } %>
     </div>
     
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
  </nav>
</header>